<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">




<div class="custom-social-media">
    <h2>{{ section.settings.title }}</h2>
    <div class="social-icons">
        {% for block in section.blocks %}
        {% case block.type %}
            {% when 'facebook' %}
            <a href="{{ block.settings.facebook_url }}" class="social-icon">
               <i class="fa-brands fa-facebook"></i>

            </a>
            {% when 'twitter' %}
            <a href="{{ block.settings.twitter_url }}" class="social-icon">
               <i class="fa-brands fa-square-x-twitter"></i>
            </a>
            {% when 'instagram' %}
            <a href="{{ block.settings.instagram_url }}" class="social-icon">
                <i class="fa-brands fa-instagram"></i>
            </a>
            {% when 'linkedin' %}
            <a href="{{ block.settings.linkedin_url }}" class="social-icon">
               <i class="fa-brands fa-linkedin"></i>
            </a>
        {% endcase %}
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Custom Social Media Links",
  "class": "custom-social-media",
  "settings": [
    {
      "type": "color",
      "id": "bg_color_start",
      "label": "Background Color Start",
      "default": "#F38137"
    },
    {
      "type": "color",
      "id": "bg_color_end",
      "label": "Background Color End",
      "default": "#f2295b"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Connect with us!"
    }
  ],
  "blocks": [
    {
      "type": "facebook",
      "name": "Facebook",
      "settings": [
        {
          "type": "url",
          "id": "facebook_url",
          "label": "Facebook URL"
        }
      ]
    },
    {
      "type": "twitter",
      "name": "Twitter",
      "settings": [
        {
          "type": "url",
          "id": "twitter_url",
          "label": "Twitter URL"
        }
      ]
    },
    {
      "type": "instagram",
      "name": "Instagram",
      "settings": [
        {
          "type": "url",
          "id": "instagram_url",
          "label": "Instagram URL"
        }
      ]
    },
    {
      "type": "linkedin",
      "name": "LinkedIn",
      "settings": [
        {
          "type": "url",
          "id": "linkedin_url",
          "label": "LinkedIn URL"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Custom Social Media",
      "category": "Custom"
    }
  ]
}
{% endschema %}


<style>
  .fa-brands:before {
    font-size: 40px;
    line-height: normal;
}
.custom-social-media {
    background-color: transparent;
    background-image: linear-gradient(280deg, {{ section.settings.bg_color_start }} 20%, {{ section.settings.bg_color_end }} 77%);
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    text-align: center;
}
.social-icon {
    display: inline-block;
    margin: 0 10px;
    padding: 20px;
    border-radius: 50%;
    transition: transform 0.3s ease;
    background: #6637379E;
}
  .social-icons i {
    color: #fff;
}
  .custom-social-media h2 {
    font-size: 54px;
    font-weight: 500;
    text-transform: capitalize;
    color: #fff;
}
.social-icon:hover {
    transform: scale(1.15);
}
  .social-icons a {
    text-decoration: none;
}
  
</style>

