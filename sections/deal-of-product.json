{
  "content": "<div class=\"funfact-area\" id=\"section-{{ section.id }}\">\n  <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n    <div class=\"row\">\n      <div class=\"col-lg-7 ml-auto\">\n        <div class=\"funfact-content\">\n          {% if section.settings.section_title != '' %}\n            <h2>{{ section.settings.section_title }}</h2>\n          {% endif %}\n          {% if section.settings.coundown_enable %}\n            <div class=\"timer\">\n              <div data-countdown=\"{{ section.settings.coundown_date }}\"></div>\n            </div>\n          {% endif %}\n          {% if section.settings.button_title != '' %}\n            <div class=\"funfact-btn btn-hover\">\n              <a href=\"{{ section.settings.button_title_url }}\">{{ section.settings.button_title }}</a>\n            </div>\n          {% endif %}\n        </div>\n      </div>\n    </div>\n  </div>\n</div>\n\n{%- include 'section-style' -%}",
  "name": "Deal of Day",
  "settings": [
    {
      "type": "header",
      "content": "Container Style"
    },
    {
      "type": "radio",
      "id": "container_style",
      "label": "Container Style",
      "options": [
        {
          "value": "style_1",
          "label": "Container"
        },
        {
          "value": "style_2",
          "label": "Container Fulied"
        }
      ],
      "default": "style_1"
    },
    {
      "type": "header",
      "content": "Section Title"
    },
    {
      "type": "header",
      "content": "Text Style"
    },
    {
      "type": "radio",
      "id": "text_style",
