<div class="suppoer-area" id="section-{{ section.id }}">
  <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
    <div class="row">
      {% for block in section.blocks %}
        {%- case block.type -%}
          {%- when 'service' -%}
            <div class="col-lg-{{ block.settings.service_coloum }} col-md-6 col-12">
              <div class="support-wrap mb-30 support-1">
                {% if block.settings.service_icon %}
                  <div class="support-icon">
                    <img
                      class="animated"
                      src="{{ block.settings.service_icon | img_url: 'compact' }}"
                      alt="{{ block.settings.service_icon.alt }}"
                    >
                  </div>
                {% endif %}

                {% if block.settings.service_title != '' or block.settings.service_description != '' %}
                  <div class="support-content">
                    <h5>{{ block.settings.service_title }}</h5>
                    <p>{{ block.settings.service_description }}</p>
                  </div>
                {% endif %}
              </div>
            </div>
        {%- endcase -%}
      {% endfor %}
    </div>
  </div>
</div>

