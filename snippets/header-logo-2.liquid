{%- if section.settings.logo_2 -%}
  {% capture logo_size %}{{ section.settings.logo_width | escape }}x{% endcapture %}
  <a href="/" class="theme-logo">
    <img
      src="{{ section.settings.logo_2 | img_url: logo_size }}"
      alt="{{ section.settings.logo_2.alt | default: shop.name }}"
      {%- if section.settings.ratina_logo_enable -%}
        srcset="{{ section.settings.logo_2 | img_url: logo_size }} 1x, {{ section.settings.logo_2 | img_url: logo_size, scale: 2 }} 2x"
      {%- endif -%}
    >
  </a>
{%- else -%}
  <a href="/">
    <strong>{{ shop.name }}</strong>
  </a>
{%- endif -%}
