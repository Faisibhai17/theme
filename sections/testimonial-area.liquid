<div class="testimonial-area" id="section-{{ section.id }}">
  <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
    <div class="row">
      <div class="col-lg-10 ml-auto mr-auto">
        <div class="testimonial-active owl-carousel nav-style-1 nav-testi-style">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'testimonial' %}
                <div class="single-testimonial text-center">
                  {% if block.settings.author_image %}
                    <img
                      src="{{ block.settings.author_image | img_url: 'compact' }}"
                      alt="Testimonials skincare products"
                    >
                  {% endif %}
                  {% if block.settings.testimonial_description != '' %}
                    <p>{{ block.settings.testimonial_description }}</p>
                  {% endif %}
                  {% if block.settings.client_name != '' or block.settings.client_position != '' %}
                    <div class="client-info">
                      {% if block.settings.client_map_icon %}
                        <i class="fa fa-{{ block.settings.client_map_icon }}"></i>
                      {% endif %}
                      <h5>{{ block.settings.client_name }}</h5>
                      <span>{{ block.settings.client_position }}</span>
                    </div>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{%- include 'section-style' -%}

<script>

  /* Testimonial active */
  $('#section-{{ section.id }} .testimonial-active').owlCarousel({
      loop: true,
    {% if settings.rtl_enable %} rtl:true, {% endif %}
      nav: true,
      autoplay: true,
      autoHeight : true,
      navText: ['<i class="pe-7s-angle-left"></i>', '<i class="pe-7s-angle-right"></i>'],
      autoplayTimeout: 5000,
      item: {{ section.settings.testimonial_cursole_handle }},
      margin: 30,
      responsive: {
          0: {
              items: 1,
              autoplay: true,
          },
          576: {
              items: 1
          },
          768: {
              items: 1
          },
          1000: {
              items: {{ section.settings.testimonial_cursole_handle }}
          }
      }
  })
</script>

