{
  "content": "<div class=\"product-area section-padding-1\" id=\"section-{{ section.id }}\">\n  <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n    {% if section.settings.section_title != '' %}\n      <div class=\"section-title-2 text-{% if section.settings.section_text_style == 'section_style_left' %}left{% elsif section.settings.section_text_style == 'section_style_center' %}center{% elsif section.settings.section_text_style == 'section_style_right' %}right{% endif %} mb-60\">\n        <h2>{{ section.settings.section_title }}</h2>\n        <p>{{ section.settings.section_description }}</p>\n      </div>\n    {% endif %}\n\n    <div class=\"custom-row\">\n      {% assign featured_product = collections[section.settings.featured_product_handle] %}\n      {% assign featured_product_limit = section.settings.featured_product_limit_handle %}\n\n      {%- if featured_product == empty -%}\n        {% assign a = 1 %}\n        {% for i in (1..featured_product_limit) %}\n          {% assign product_item = 'product-' | append: a %}\n          {% assign a = a | plus: 1 %}\n          <div class=\"custom-col-5\">\n            <div class=\"product-wrap-2 mb-25 scroll-zoom\">\n              <div class=\"product-img\" style=\"background: #f2f2f2;\">\n                {{ product_item | placeholder_svg_tag: 'my-custom-class' }}\n              </div>\n              <div class=\"product-content-2\">\n                <div class=\"title-price-wrap-2\">\n                  <h3><a href=\"product-details.html\">T- Shirt And Jeans</a></h3>\n                  <div class=\"price-2\">\n                    <span>$ 60.00</span>\n                    <span class=\"old\">$ 60.00</span>\n                  </div>\n                </div>\n              </div>\n            </div>\n          </div>\n          {% if a == 7 %}\n            {% assign a = 1 %}\n          {% endif %}\n        {% endfor %}\n\n      {%- else -%}\n        {% for product in featured_product.products limit: featured_product_limit %}\n          <div class=\"custom-col-5\">\n            {% include 'product-grid-item-2' %}\n          </div>\n        {% endfor %}\n      {%- endif -%}\n    </div>\n  </div>\n</div>\n\n{%- include 'section-style' -%}\n\n<style>\n\n    {% if section.settings.boder_enable %}\n\n    .section-title-2 h2:before {\n      background-color: #000000;\n    }\n    {% else %}\n\n     .section-title-2 h2:before {\n      display: none;\n  }\n\n    {% endif %}\n</style>",
