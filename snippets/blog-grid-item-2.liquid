{% comment %}
  <div class="article">

    {% if article.image %}
    <a class="article__featured-image" href="{{ article.url }}">
      {{ article | img_url: '1024x1024' | img_tag: article.title }}
    </a>
    {% endif %}

    <h2 class="h3"><a href="{{ article.url }}">{{ article.title }}</a></h2>
    {% capture author %}<strong>{{ article.author }}</strong>{% endcapture %}
    {% capture date %}<time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>{% endcapture %}
    <p>{{ 'blogs.article.author_on_date_html' | t: author: author, date: date }}</p>

    <div class="rte">
      {% if article.excerpt.size > 0 %}
      {{ article.excerpt }}
      {% else %}
      <p>{{ article.content | strip_html | truncatewords: 50 }}</p>
      {% endif %}
    </div>

    <ul class="inline-list">
      {% if blog.comments_enabled? %}
      <li>
        <a href="{{ article.url }}#comments">
          {{ 'blogs.comments.with_count' | t: count: article.comments_count }}
        </a>
      </li>
      {% endif %}

      {% include 'tags-article' %}
    </ul>

    <p><a href="{{ article.url }}">{{ 'blogs.article.read_more' | t }} &rarr;</a></p>

  </div>
{% endcomment %}

<div class="blog-wrap-2 mb-30">
  {% if article.image %}
    <div class="blog-img-2">
      <a href="{{ article.url }}">
        <img src="{{ article | img_url : '1024x1024', crop: 'center' }}" alt="{{ article.image.alt }}">
      </a>
    </div>
  {% endif %}

  <div class="blog-content-2">
    <h4 class="h3">
      <a href="{{ article.url }}">{{ article.title }}</a>
    </h4>
    <div class="blog-meta-2">
      <ul>
        <li>{{ article.published_at | date: '%b, %d , %y' }}</li>
        {% if blog.comments_enabled? %}
          <li>
            <a href="{{ article.url }}#comments">
              {{ 'blogs.comments.with_count' | t: count: article.comments_count }}
              <i class="fa fa-comments-o"></i
            ></a>
          </li>
        {% endif %}
      </ul>
    </div>

    <div class="blog-description">
      {% if article.excerpt.size > 0 %}
        {{ article.excerpt }}
      {% else %}
        <p>{{ article.content | strip_html | truncatewords: 20 }}</p>
      {% endif %}
    </div>

    <div class="blog-share-comment">
      <div class="blog-btn-2">
        <a href="{{ article.url }}">{{ 'blogs.article.read_more' | t }}</a>
      </div>

      <!--
        <div class="blog-share">
          {% include 'blog-share-2' %}

        </div>
      -->
    </div>
  </div>
</div>
