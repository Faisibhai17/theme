{
  "content": "<div class=\"Blog-area\" id=\"section-{{ section.id }}\">\n  <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n    <div class=\"row {% if section.settings.sidebar_handle == 'left_sidebar_handle' %}flex-row-reverse{% endif %}\">\n      {%- unless section.settings.sidebar_handle == 'without_sidebar' -%}\n        <div class=\"col-lg-12\">\n          {% include 'blog-sidebar' %}\n        </div>\n      {%- endunless -%}\n\n      <div class=\"{% if section.settings.sidebar_handle == 'without_sidebar' %}col-lg-12{% else %}col-lg-12{% endif %} col-12\">\n        {%- assign blogs_limit = section.settings.blog_limit_handle -%}\n        {%- paginate blog.articles by blogs_limit -%}\n          <div class=\"\">\n            <div class=\"row\">\n              {% for article in blog.articles %}\n                <div class=\"col-lg-{{ section.settings.blog_column }} col-md-{{ section.settings.blog_column_md }} col-{{ section.settings.blog_column_xs }}\">\n                  {% include 'blog-grid-item-2' %}\n                </div>\n              {% endfor %}\n            </div>\n            {%- if paginate.pages > 1 -%}\n              <div class=\"pro-pagination-style text-center mt-20\">\n                {% include 'pagination' %}\n              </div>\n            {%- endif -%}\n          </div>\n        {%- endpaginate -%}\n      </div>\n    </div>\n  </div>\n</div>\n\n{%- include 'section-style' -%}",
  "name": "Blog Page",
  "settings": [
    {
      "type": "header",
      "content": "Container Style"
    },
    {
      "type": "radio",
      "id": "container_style",
      "label": "Container Style",
      "options": [
        {
          "value": "style_1",
          "label": "Container"
        },
        {
          "value": "style_2",
          "label": "Container Fulied"
        }
      ],
      "default": "style_1"
    },
    {
      "type": "header",
      "content": "Blog"
    },
    {
      "type": "range",
      "id": "blog_limit_handle",
      "min": 2,
      "max": 100,
      "step": 1,
      "label": "Post Limit",
      "default": 9,
      "info": "How many products are displayed on each page"
    },
    {
      "type": "header",
      "content": "Blog Column"
    },
    {
      "type": "select",
      "id": "blog_column",
      "label": "Desktop",
      "options": [
        {
          "label": "1",
          "value": "12"
        },
        {
          "label": "2",
          "value": "6"
        },
        {
          "label": "3",
          "value": "4"
        },
        {
          "label": "4",
          "value": "3"
        }
      ],
      "default": "4"
    },
    {
      "type": "select",
      "id": "blog_column_md",
      "label": "Tablet",
      "options": [
        {
          "label": "1",
          "value": "12"
        },
        {
          "label": "2",
          "value": "6"
        },
        {
          "label": "3",
          "value": "4"
        },
        {
          "label": "4",
          "value": "3"
        }
      ],
      "default": "6"
    },
    {
      "type": "select",
      "id": "blog_column_xs",
      "label": "Mobile",
      "options": [
        {
          "label": "1",
          "value": "12"
        },
        {
          "label": "2",
          "value": "6"
        }
      ],
      "default": "12"
    },
    {
      "type": "header",
      "content": "Blog Sidebar"
    },
    {
      "type": "radio",
      "id": "sidebar_handle",
      "label": "Sidebar Position -",
      "options": [
        {
          "label": "Left Sidebar",
          "value": "left_sidebar_handle"
        },
        {
          "label": "Right Sidebar",
          "value": "right_sidebar_handle"
        },
        {
          "label": "Without Sidebar",
          "value": "without_sidebar"
        }
      ],
      "default": "left_sidebar_handle"
    }
  ],
  "blocks": [
    {
      "type": "search",
      "name": "Search",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "wedget_title",
          "label": "Title",
          "default": "Search"
        }
      ]
    },
    {
      "type": "recent_post",
      "name": "Recent Post",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "recent_post_title",
          "label": "Recent Post Title",
          "default": "Recent Post"
        },
        {
          "type": "range",
          "id": "recent_post_limit_handle",
          "min": 2,
          "max": 10,
          "step": 1,
          "label": "Post Limit",
          "default": 3
        }
      ]
    },
    {
      "type": "archive",
      "name": "Archive",
      "limit": 1,
      "settings": [
        {
          "type": "text",
