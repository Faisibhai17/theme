{
  "content": "{% if section.settings.coundown_area_enable %}\n  <div class=\"funfact-area\" id=\"section-{{ section.id }}\">\n    <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n      <div class=\"row\">\n        {% for block in section.blocks %}\n          {% case block.type %}\n            {% when 'coundown' %}\n              <div class=\"col-lg-{{ block.settings.coundown_coloum }} col-md-6 col-12\">\n                <div class=\"single-count text-center mb-30\">\n                  {% if block.settings.coundown_icon != '' %}\n                    <div class=\"count-icon\">\n                      <i class=\"pe-7s-{{ block.settings.coundown_icon }}\"></i>\n                    </div>\n                  {% endif %}\n\n                  {% if block.settings.coundown_number != '' %}\n                    <h2 class=\"count\">{{ block.settings.coundown_number }}</h2>\n                  {% endif %}\n                  {% if block.settings.coundown_title != '' %}\n                    <span>{{ block.settings.coundown_title }}</span>\n                  {% endif %}\n                </div>\n              </div>\n          {% endcase %}\n        {% endfor %}\n      </div>\n    </div>\n  </div>\n{% endif %}\n\n{%- include 'section-style' -%}",
  "name": "Coundown Area",
  "settings": [
    {
      "type": "header",
      "content": "Container Style"
    },
    {
      "type": "radio",
      "id": "container_style",
      "label": "Container Style",
      "options": [
        {
          "value": "style_1",
          "label": "Container"
        },
        {
          "value": "style_2",
          "label": "Container Fulied"
        }
      ],
      "default": "style_1"
    },
    {
      "type": "checkbox",
      "id": "coundown_area_enable",
      "label": "Coundown Area Enable",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "coundown",
      "name": "coundown",
      "settings": [
        {
          "type": "text",
          "id": "coundown_coloum",
          "label": "Coundown Coloum",
          "default": "3",
          "info": "Follow Bootstrap Column"
        },
        {
          "type": "text",
          "id": "coundown_icon",
          "label": "Icon",
          "default": "portfolio",
          "info": "[See More Icon](https://themes-pixeden.com/font-demos/7-stroke/)"
        },
        {
          "type": "text",
          "id": "coundown_number",
          "label": "Coundown Number",
          "default": "360"
        },
        {
          "type": "text",
          "id": "coundown_title",
          "label": "Coundown Title",
          "default": "project done"
        }
      ]
    },
    {
      "type": "section_padding",
      "name": "Section Padding",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Large/Desktop Device"
        },
        {
          "type": "range",
          "id": "section_padding_top",
          "min": 0,
          "max": 150,
          "step": 5,
          "label": "Padding Top",
          "unit": "px",
          "default": 0
        },
        {
          "type": "range",
          "id": "section_padding_bottom",
          "min": 0,
          "max": 150,
          "step": 5,
          "label": "Padding Bottom",
          "unit": "px",
          "default": 100
        },
        {
