<div class="product-area hm6-section-padding" id="section-{{ section.id }}">
  <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
    <div class="row grid">
      <div class="grid-sizer"></div>

      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product' %}
            <div class="col-lg-{{ block.settings.product_coloum }} col-md-6 col-12 grid-item">
              <div class="product-wrap-4 mb-20">
                <a href="{{ block.settings.product_img_url }}">
                  <img
                    src="{% if block.settings.product_img %}{{ block.settings.product_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/870x700{% endif %}"
                    alt="{{ block.settings.product_img.alt }}"
                  >
                </a>
                <div class="product-content-4 {% if block.settings.text_style == 'text_style_1' %} text-center position-1 {% elsif block.settings.text_style == 'text_style_2' %}  text-center position-2 {% else %} product-content-center position-3 {% endif %}">
                  {% if block.settings.product_title != '' %}
                    <h4>
                      <a href="{{ block.settings.product_title_url }}">{{ block.settings.product_title }}</a>
                    </h4>
                  {% endif %}

                  {% if block.settings.product_new_price != '' or block.settings.product_old_price != '' %}
                    <div class="price-4 price-4-center">
                      <span>{{ block.settings.product_new_price }}</span>
                      <span class="old">{{ block.settings.product_old_price }}</span>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

