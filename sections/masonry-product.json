{
  "content": "<div class=\"product-area hm6-section-padding\" id=\"section-{{ section.id }}\">\n  <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n    <div class=\"row grid\">\n      <div class=\"grid-sizer\"></div>\n\n      {% for block in section.blocks %}\n        {% case block.type %}\n          {% when 'product' %}\n            <div class=\"col-lg-{{ block.settings.product_coloum }} col-md-6 col-12 grid-item\">\n              <div class=\"product-wrap-4 mb-20\">\n                <a href=\"{{ block.settings.product_img_url }}\">\n                  <img\n                    src=\"{% if block.settings.product_img %}{{ block.settings.product_img | img_url: 'master' }}{% else %}http:\\/\\/via.placeholder.com\\/870x700{% endif %}\"\n                    alt=\"{{ block.settings.product_img.alt }}\"\n                  >\n                </a>\n                <div class=\"product-content-4 {% if block.settings.text_style == 'text_style_1' %} text-center position-1 {% elsif block.settings.text_style == 'text_style_2' %}  text-center position-2 {% else %} product-content-center position-3 {% endif %}\">\n                  {% if block.settings.product_title != '' %}\n                    <h4>\n                      <a href=\"{{ block.settings.product_title_url }}\">{{ block.settings.product_title }}</a>\n                    </h4>\n                  {% endif %}\n\n                  {% if block.settings.product_new_price != '' or block.settings.product_old_price != '' %}\n                    <div class=\"price-4 price-4-center\">\n                      <span>{{ block.settings.product_new_price }}</span>\n                      <span class=\"old\">{{ block.settings.product_old_price }}</span>\n                    </div>\n                  {% endif %}\n                </div>\n              </div>\n            </div>\n        {% endcase %}\n      {% endfor %}\n    </div>\n  </div>\n</div>\n\n{%- include 'section-style' -%}",
  "name": "Masonry Product",
  "settings": [
    {
      "type": "header",
      "content": "Container Style"
    },
    {
      "type": "radio",
      "id": "container_style",
      "label": "Container Style",
      "options": [
        {
          "value": "style_1",
          "label": "Container"
        },
        {
          "value": "style_2",
          "label": "Container Fulied"
        }
      ],
      "default": "style_2"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "product",
      "settings": [
        {
          "type": "text",
          "id": "product_coloum",
          "label": "Product Coloum",
          "default": "6",
          "info": "Follow Bootstrap Column"
        },
        {
          "type": "image_picker",
          "id": "product_img",
          "label": "Image",
          "info": "Recommended Size: 870 x 700px"
        },
        {
          "type": "url",
          "id": "product_img_url",
          "label": "URL"
        },
        {
          "type": "header",
          "content": "Text Style"
        },
        {
          "type": "radio",
          "id": "text_style",
          "label": "Product Text Style",
          "options": [
            {
              "value": "text_style_1",
              "label": "Style 1"
            },
            {
              "value": "text_style_2",
              "label": "Style 2"
            },
            {
              "value": "text_style_3",
              "label": "Style 3"
            }
          ],
          "default": "text_style_1"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title",
          "default": "T- Shirt And <br>Jeans",
          "info": "Use of <br>"
        },
        {
          "type": "url",
          "id": "product_title_url",
          "label": "URL"
        },
        {
          "type": "text",
          "id": "product_new_price",
          "label": "New Price",
          "default": "$ 60.00"
        },
        {
          "type": "text",
          "id": "product_old_price",
          "label": "Old Price",
          "default": "$ 80.00"
        }
      ]
    },
    {
      "type": "section_padding",
      "name": "Section Padding",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Large/Desktop Device"
        },
        {
          "type": "range",
          "id": "section_padding_top",
          "min": 0,
          "max": 150,
          "step": 5,
          "label": "Padding Top",
          "unit": "px",
          "default": 0
        },
        {
          "type": "range",
          "id": "section_padding_bottom",
          "min": 0,
          "max": 150,
          "step": 5,
          "label": "Padding Bottom",
