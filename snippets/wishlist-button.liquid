{% if customer %}
  <a
    class="action-wishlist tile-actions--btn flex wishlist-btn wishlist"
    href="#"
    data-product-handle="{{ product.handle }}"
  >
    <span class="add-wishlist"><i class="fa fa-heart-o"></i></span>
    <span class="loading-wishlist"><i class="fa fa-circle-o-notch fa-spin"></i></span>
    <span class="remove-wishlist"><i class="fa fa-heart"></i></span>
  </a>
{% else %}
  <a class="wishlist" href="/account/login" title="Wishlist">
    <i class="fa fa-heart-o"></i>
  </a>
{% endif %}
