 <div class="custom_heading">
        <h1>{{ section.settings.heading }}</h1>
        <p>{{ section.settings.description }}</p>
    </div>
    <section class="custom_package">
       {% for block in section.blocks %}
            <div class="custom_sec1  custom-block-loop{{ forloop.index }}">
                <div class="custom_heading1">
                    <h2>{{ block.settings.tab_title }}</h2>
                    <p>{{ block.settings.tab_desp }}</p>
                </div>
                <div class="custom_price">
                    <p>{{ block.settings.compareprice }}</p>
                    <h4>{{ block.settings.price }}</h4>
                </div>
        
                <div class="custom_main_text">
                  {% if block.settings.image_with_text_image %}
                    <div class="custom_text_sec">
                        <img src="{{ block.settings.image_with_text_image | img_url: 'master' }}" alt=""><span>{{ block.settings.tab_content }}</span>
                    </div> {% else %} {% endif %}
                     {% if block.settings.image_with_text_image %}
                    <div class="custom_text_sec">
                        <img src="{{ block.settings.image_with_text_image | img_url: 'master' }}" alt=""><span>{{ block.settings.tab_content1 }}</span>
                    </div> {% else %} {% endif %}
                 {% if block.settings.image_with_text_image %}
                    <div class="custom_text_sec">
                        <img src="{{ block.settings.image_with_text_image | img_url: 'master' }}" alt=""><span>{{ block.settings.tab_content2 }}</span>
                    </div> {% else %} {% endif %}
                  {% if block.settings.image_with_text_image %}
                    <div class="custom_text_sec">
                        <img src="{{ block.settings.image_with_text_image | img_url: 'master' }}" alt=""><span>{{ block.settings.tab_content3 }}</span>
                    </div> {% else %} {% endif %}
                  {% if block.settings.image_with_text_image %}
                    <div class="custom_text_sec">
                        <img src="{{ block.settings.image_with_text_image | img_url: 'master' }}" alt=""><span>{{ block.settings.tab_content4 }}</span>
                    </div> {% else %} {% endif %}
                  {% if block.settings.image_with_text_image %}
                    <div class="custom_text_sec">
                        <img src="{{ block.settings.image_with_text_image | img_url: 'master' }}" alt=""><span>{{ block.settings.tab_content5 }}</span>
                    </div> {% else %} {% endif %}
                </div>
             
                <div class="custon_btn">
                    <a href="{{block.settings.link}}">{{block.settings.text-box}}</a>
                    <p>{{ block.settings.text-box1 }}</p>
                </div>
            </div>
{% endfor %}
        
    </section>
{% schema %}
{
  "name": "Custom Package Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }

  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Tab Title Here"
        },
        {
          "type": "text",
          "id": "tab_desp",
          "label": "Tab Title",
          "default": "Tab Title Here"
        },
        
       {
          "type": "text",
          "id": "compareprice",
          "label": "Tab Title"
        },
        {
          "type": "richtext",
          "id": "price",
          "label": "Tab Title"
        },
        
        {
  "type": "image_picker",
  "id": "image_with_text_image",
  "label": "Image"
},
         {
          "type": "text",
          "id": "tab_content",
          "label": "Tab Content"
        },
         {
          "type": "text",
          "id": "tab_content1",
          "label": "Tab Content"
        },
         {
          "type": "text",
          "id": "tab_content2",
          "label": "Tab Content"
        },
         {
          "type": "text",
          "id": "tab_content3",
          "label": "Tab Content"
        },
         {
          "type": "text",
          "id": "tab_content4",
          "label": "Tab Content"
        },
         {
          "type": "text",
          "id": "tab_content5",
          "label": "Tab Content"
        },
         {
      "id": "text-box",
      "type": "text",
      "label": "Button",
      "default": "Title"
    },
    {
      "id": "link",
      "type": "url",
      "label": "Button link"
    },
         {
      "id": "text-box1",
      "type": "text",
      "label": "Time"
    }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Package Section"
    }
  ]
}
{% endschema %}