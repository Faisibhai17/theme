<div class="subscribe-area-3" id="section-{{ section.id }}">
  <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
    <div class="row">
      <div class="col-xl-5 col-lg-7 ml-auto mr-auto">
        <div class="subscribe-style-3 text-center">
          {% if section.settings.newslatter_title != '' %}
            <h2>{{ section.settings.newslatter_title }}</h2>
          {% endif %}
          {% if section.settings.newslatter_description != '' %}
            <p>{{ section.settings.newslatter_description }}</p>
          {% endif %}
          <div class="klaviyo-signup">
            <div class="klaviyo-form-WTS8es"></div>
          </div>

          {% comment %}
            <div id="mc_embed_signup" class="subscribe-form-3 mt-35">
              <form action="{{ settings.newsletter_action }}" class="newsletter-form mc-form validate" method="post" id="mc-embedded-subscribe-form"  name="mc-embedded-subscribe-form" target="_blank" novalidate>
                <div id="mc_embed_signup_scroll" class="mc-form">
                  <input type="email" value="" name="EMAIL" class="newsletter-form__input email" id="mce-EMAIL" placeholder="Enter Your Email Address" required>
                  <div class="clear-3">
                    <input class="button" type="submit" name="subscribe" value="{{ section.settings.newslatter_button_title }}">
                  </div>
                </div>
              </form>
            </div>
          {% endcomment %}
        </div>
      </div>
    </div>
  </div>
</div>

