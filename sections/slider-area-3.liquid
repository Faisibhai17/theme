<div class="slider-area desktop-version" id="section-{{ section.id }}">
  <div class="slider-active owl-carousel nav-style-1">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'slide' %}
          <div
            class="{{ block.settings.class-block }} single-slider-2 slider-height-2 d-flex align-items-center bg-img desktop-version {{ block.settings.slider_img }}"
            style="background-image:url({% if block.settings.slider_img %}{{ block.settings.slider_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/1920x800{% endif %});"
          >
            <div class="container">
              <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-12 ml-auto">
                  <div class="slider-content-3 slider-animated-1 text-{% if block.settings.text_style == 'text_style_left' %}left{% elsif block.settings.text_style == 'text_style_center' %}center{% elsif block.settings.text_style == 'text_style_right' %}right{% endif %}">
                    {% if block.settings.slider_subtitle != '' %}
                      <h3 class="animated">{{ block.settings.slider_subtitle }}</h3>
                    {% endif %}
                    {% if block.settings.slider_title != '' %}
                      <h1 class="lani test animated">{{ block.settings.slider_title }}</h1>
                    {% endif %}
                    {% if block.settings.slider_description != '' %}
                      <p class="animated">{{ block.settings.slider_description }}</p>
                    {% endif %}
                    {% if block.settings.button_title != '' %}
                      <div class="slider-btn btn-hover">
                        <a class="animated" href="{{ block.settings.button_url }}">{{ block.settings.button_title }}</a>
                        <a class="custom-button" href="{{ block.settings.button_url }}">Learn More</a>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>
<div class="slider-area mobile-version" id="section-{{ section.id }}">
  <div class="slider-active owl-carousel nav-style-1">
    {% for block in section.blocks %}
