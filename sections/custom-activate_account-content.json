{
  "content": "<div class=\"customer-page theme-default-margin\">\n  <div class=\"container\">\n    <div class=\"row\">\n      <div class=\"col-lg-6 offset-lg-3 col-md-8 offset-md-2\">\n        <div class=\"login\">\n          <div class=\"login-form-container\">\n            <div class=\"login-text\">\n              <h2>{{ 'customer.activate_account.title' | t }}</h2>\n              <p>{{ 'customer.activate_account.subtext' | t }}</p>\n            </div>\n            <div class=\"login-form\">\n              {% form 'activate_customer_password' %}\n                {{ form.errors | default_errors }}\n                <label for=\"CustomerPassword\" class=\"hidden-label\">\n                  {{- 'customer.activate_account.password' | t -}}\n                </label>\n                <input\n                  type=\"password\"\n                  value=\"\"\n                  name=\"customer[password]\"\n                  id=\"CustomerPassword\"\n                  class=\"input-full\"\n                  placeholder=\"{{ 'customer.activate_account.password' | t }}\"\n                >\n\n                <label for=\"CustomerPasswordConfirmation\" class=\"hidden-label\">\n                  {{- 'customer.activate_account.password_confirm' | t -}}\n                </label>\n                <input\n                  type=\"password\"\n                  value=\"\"\n                  name=\"customer[password_confirmation]\"\n                  id=\"CustomerPasswordConfirmation\"\n                  class=\"input-full\"\n                  placeholder=\"{{ 'customer.activate_account.password_confirm' | t }}\"\n                >\n\n                <div class=\"form-action-button\">\n                  <button type=\"submit\" class=\"theme-default-button\">\n                    {{ 'customer.activate_account.submit' | t }}\n                  </button>\n                  <button type=\"submit\" class=\"theme-default-button\" name=\"decline\">\n                    {{ 'customer.activate_account.cancel' | t }}\n                  </button>\n                </div>\n              {% endform %}\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</div>",
