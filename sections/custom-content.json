{
  "content": "<div class=\"custom-content\" id=\"section-{{ section.id }}\">\n  {% if section.settings.section_title != '' %}\n    <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n      <div class=\"row\">\n        <div class=\"col-12\">\n          <div class=\"section-title text-{% if section.settings.section_text_style == 'section_style_left' %}left{% elsif section.settings.section_text_style == 'section_style_center' %}center{% elsif section.settings.section_text_style == 'section_style_right' %}right{% endif %}\">\n            <h2>{{ section.settings.section_title }}</h2>\n          </div>\n        </div>\n      </div>\n    </div>\n    <br>\n  {% endif %}\n  <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n    <div class=\"row\">\n      {% for block in section.blocks %}\n        {% case block.type %}\n          {% when 'html_content' %}\n            <div\n              class=\"col-lg-{{ block.settings.content_column }} col-md-{{ block.settings.content_column_md }} col-xs-12\"\n              {{ block.shopify_attributes }}\n            >\n              <div class=\"html-content\">\n                {{ block.settings.html_content }}\n              </div>\n            </div>\n            {%- if block.settings.html_content_css != '' -%}\n              <style>\n                {{ block.settings.html_content_css }}\n              </style>\n            {%- endif -%}\n          {% when 'image_content' %}\n            <div\n              class=\"col-lg-{{ block.settings.content_column }} col-md-{{ block.settings.content_column_md }} col-xs-12\"\n              {{ block.shopify_attributes }}\n            >\n              <div class=\"image-content\">\n                {% if block.settings.image_content_image != blank and block.settings.image_content_image_url != blank %}\n                  <a href=\"{{ block.settings.image_content_image_url }}\">\n                    <img\n                      src=\"{{ block.settings.image_content_image | img_url: 'master' }}\"\n                      alt=\"{{ block.settings.image_content_image.alt }}\"\n                    >\n                  </a>\n                {% elsif block.settings.image_content_image != blank %}\n                  <img\n                    src=\"{{ block.settings.image_content_image | img_url: 'master' }}\"\n                    alt=\"{{ block.settings.image_content_image.alt }}\"\n                  >\n                {% else %}\n                  <img src=\"https://dummyimage.com/800x500/eeeeee/000000.jpg&text=Image+Content\" alt=\"image\">\n                {% endif %}\n              </div>\n            </div>\n        {% endcase %}\n      {% endfor %}\n    </div>\n  </div>\n</div>\n\n{%- include 'section-style' -%}",
  "name": "Custom Content",
  "settings": [
    {
      "type": "header",
      "content": "Container Style"
    },
    {
      "type": "radio",
      "id": "container_style",
      "label": "Container Style",
      "options": [
        {
          "value": "style_1",
          "label": "Container"
        },
        {
          "value": "style_2",
          "label": "Container Fulied"
        }
      ],
      "default": "style_1"
    },
    {
      "type": "header",
      "content": "Section Heading"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Section Title Here"
    },
    {
      "type": "header",
      "content": "Text Style"
    },
    {
      "type": "radio",
      "id": "section_text_style",
      "label": "Text Style",
      "options": [
        {
          "value": "section_style_left",
          "label": "Left"
        },
        {
          "value": "section_style_center",
          "label": "center"
        },
        {
          "value": "section_style_right",
          "label": "right"
        }
      ],
      "default": "section_style_left"
    }
  ],
  "blocks": [
    {
      "type": "html_content",
      "name": "HTML Content",
      "settings": [
        {
          "type": "range",
          "id": "content_column",
          "min": 1,
          "max": 12,
          "step": 1,
          "label": "Content Column",
          "unit": "/12",
          "default": 6
        },
        {
          "type": "range",
          "id": "content_column_md",
          "min": 1,
          "max": 12,
          "step": 1,
          "label": "Tablet Content Column",
          "unit": "/12",
          "default": 6
        },
        {
          "type": "html",
          "id": "html_content",
          "label": "HTML Content",
          "default": "<div class='html-content-class'><h2>Custom Content Title</h2><p>There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable.</p></div>"
        },
        {
          "type": "html",
          "id": "html_content_css",
          "label": "HTML Content CSS",
          "default": ".html-content-class{color: #666; margin-top: 100px;}.html-content-class h2{margin-bottom: 20px;}"
