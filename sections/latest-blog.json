{
  "content": "<div class=\"blog-area\" id=\"section-{{ section.id }}\">\n  <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n    {% if section.settings.section_title != '' %}\n    <div class=\"section-title text-{% if section.settings.section_text_style == 'section_style_left' %}left{% elsif section.settings.section_text_style == 'section_style_center' %}center{% elsif section.settings.section_text_style == 'section_style_right' %}right{% endif %} mb-55\">\n      <h2>{{ section.settings.section_title }}</h2>\n      {% if section.settings.section_description != '' %}\n      <p>{{ section.settings.section_description }}</p>\n      {% endif %}\n    </div>\n  </div>\n    {% endif %}\n    <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n    <div class=\"row\">\n      {% assign blog = blogs[section.settings.blog_handle] %}\n      {% assign blog_limit = section.settings.blog_limit_handle %}\n\n      {% for article in blog.articles limit: blog_limit %}\n      <div class=\"col-lg-{{ section.settings.blog_column }} col-md-{{ section.settings.blog_column_md }} col-{{ section.settings.blog_column_xs }}\">\n        {% include 'blog-grid-item' %}\n      </div>\n      {% endfor %}\n    </div>\n  </div>\n</div>\n\n\n\n\n{%- include 'section-style' -%}\n\n\n<style>\n \n  {% if section.settings.boder_enable %}\n  \n  .section-title h2::before {\n    background-color: #000;\n}\n  .section-title h2::after {\n    background-color: #000;\n}\n  {% else %}\n  \n   .section-title h2::before {\n    display: none;\n}\n  .section-title h2::after {\n    display: none;\n}\n  \n  {% endif %}\n  \n</style>",
  "name": "Latest Blog",
  "settings": [
    {
      "type": "header",
      "content": "Container Style"
    },
    {
      "type": "radio",
      "id": "container_style",
      "label": "Container Style",
      "options": [
        {
          "value": "style_1",
          "label": "Container"
        },
        {
          "value": "style_2",
          "label": "Container Fulied"
        }
      ],
      "default": "style_1"
    },
    {
      "type": "header",
      "content": "Section Heading"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "OUR BLOG"
    },
    {
      "type": "checkbox",
      "id": "boder_enable",
      "label": "Border Show/Hide",
      "default": true
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Lorem ipsum dolor sit amet conse ctetu."
    },
    {
      "type": "header",
      "content": "Text Style"
    },
    {
      "type": "radio",
      "id": "section_text_style",
      "label": "Text Style",
      "options": [
        {
          "value": "section_style_left",
          "label": "Left"
        },
        {
          "value": "section_style_center",
          "label": "center"
        },
        {
          "value": "section_style_right",
          "label": "right"
        }
      ],
      "default": "section_style_center"
    },
    {
      "type": "header",
      "content": "Blog"
    },
    {
      "type": "blog",
      "id": "blog_handle",
      "label": "Select Blog"
    },
    {
      "type": "range",
      "id": "blog_limit_handle",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Limit",
      "default": 3
    },
    {
      "type": "header",
      "content": "Blog Column"
    },
    {
      "type": "select",
      "id": "blog_column",
      "label": "Desktop",
      "options": [
        {
          "label": "2",
          "value": "6"
        },
        {
          "label": "3",
          "value": "4"
        },
        {
          "label": "4",
          "value": "3"
        }
      ],
      "default": "4"
    },
    {
      "type": "select",
      "id": "blog_column_md",
      "label": "Tablet",
      "options": [
        {
          "label": "2",
          "value": "6"
        },
        {
          "label": "3",
          "value": "4"
        },
        {
          "label": "4",
          "value": "3"
        }
      ],
      "default": "6"
    },
    {
      "type": "select",
      "id": "blog_column_xs",
      "label": "Mobile",
      "options": [
        {
          "label": "1",
          "value": "12"
        },
        {
          "label": "2",
          "value": "6"
        }
      ],
      "default": "12"
    }
  ],
  "blocks": [
    {
      "type": "section_padding",
