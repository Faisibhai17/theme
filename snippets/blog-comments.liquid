{% comment %}
  <h3 class="comment-title">{{ 'blogs.comments.with_count' | t: count: article.comments_count }}</h3>
  <ul class="comment-list">
    {% for comment in article.comments %}
    <li>
      <div class="article-comment">
        <div class="comment-thumb">
          {% if section.settings.commentator_image %}
          <img src="{{ section.settings.commentator_image | img_url: '100x100', crop: 'center' }}" alt="{{ section.settings.commentator_image.alt }}">
          {% else %}
          <img src="https://www.gravatar.com/avatar/{{ comment.email | remove: ' ' | strip_newlines | downcase | md5 | append: '?s=200' }}" />
          {% endif %}
        </div>
        <div class="comment-content">
          <div class="comnt-author">
            <span>{{ comment.author }}</span>
            <span>{{ comment.created_at | date: "%b %d, %Y at %H:%M" }}</span>
          </div>
          <p>{{ comment.content }}</p>
        </div>
      </div>
    </li>
    {% endfor %}
  </ul>
{% endcomment %}

<div class="blog-comment-wrapper mt-55">
  <h4 class="blog-dec-title">{{ 'blogs.comments.with_count' | t: count: article.comments_count }}</h4>

  {% for comment in article.comments %}
    <div class="single-comment-wrapper mt-35">
      <div class="blog-comment-img">
        {% if section.settings.commentator_image %}
          <img
            src="{{ section.settings.commentator_image | img_url: '100x100', crop: 'center' }}"
            alt="{{ section.settings.commentator_image.alt }}"
          >
        {% else %}
          <img src="https://www.gravatar.com/avatar/{{ comment.email | remove: ' ' | strip_newlines | downcase | md5 | append: '?s=200' }}">
        {% endif %}
      </div>
      <div class="blog-comment-content">
        <h4>{{ comment.author }}</h4>
        <span>{{ comment.created_at | date: '%b %d, %Y at %H:%M' }}</span>
        <p>{{ comment.content }}</p>
      </div>
    </div>
  {% endfor %}
</div>
