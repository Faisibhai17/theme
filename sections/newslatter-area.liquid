<div class="subscribe-area pl-30 pr-30" id="section-{{ section.id }}">
  <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
    <div class="row no-gutters">
      <div class="col-xl-6 col-lg-8 ml-auto mr-auto">
        <div class="subscribe-style-2 text-center">
          {% if section.settings.newslatter_title != '' %}
            <h2>{{ section.settings.newslatter_title }}</h2>
          {% endif %}
          {% if section.settings.newslatter_description != '' %}
            <p>{{ section.settings.newslatter_description }}</p>
          {% endif %}
          <div class="subscribe-form-2">
            <form
              action="{{ settings.newsletter_action }}"
              class="newsletter-form mc-form validate"
              method="post"
              id="mc-embedded-subscribe-form"
              name="mc-embedded-subscribe-form"
              target="_blank"
              novalidate
            >
              <div id="mc_embed_signup_scroll" class="mc-form">
                <div id="mc-form" class="mc-form subscribe-form">
                  <input
                    type="email"
                    value=""
                    name="EMAIL"
                    class="newsletter-form__input email"
                    id="mce-EMAIL"
                    placeholder="{{ section.settings.newslatter_placeholder_title }}"
                    required
                  >
                  <div class="clear-2">
                    <input
                      class="button"
                      type="submit"
                      name="subscribe"
                      value="{{ section.settings.newslatter_button_title }}"
                    >
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{%- include 'section-style' -%}

<style>
  .subscribe-style-2 .subscribe-form-2 form .clear-2 {
      background: rgba(0, 0, 0, 0) url({% if section.settings.arrow_icon %}{{ section.settings.arrow_icon | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/30x20{% endif %}) no-repeat scroll right 0 center;
