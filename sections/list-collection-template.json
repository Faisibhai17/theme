{
  "content": "<div class=\"related-product-area\" id=\"section-{{ section.id }}\">\n  {% for collection in collections %}\n    {% unless collection.handle == 'frontpage' %}\n      {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}\n      <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %} {% unless forloop.last %}mb-60{% endunless %}\">\n        <div class=\"section-title {% if section.settings.section_text_align == 'section_text_left' %}text-left{% elsif section.settings.section_text_align == 'section_text_center' %}text-center{% elsif section.settings.section_text_align == 'section_text_right' %}text-right{% endif %} mb-50\">\n          <h2>{{ collection_title }}</h2>\n          <a href=\"{{ collection.url }}\" title=\"{{ 'collections.general.link_title' | t: title: collection_title }}\">\n            {{- section.settings.more_title }}\n            {{ collection_title }} &rsaquo;</a\n          >\n        </div>\n        <div class=\"related-product-active owl-carousel\">\n          {% assign products_limit = section.settings.products_limit_handle %}\n          {% for product in collection.products limit: products_limit %}\n            {% assign grid_item_width = 'large--one-fifth medium--one-half' %}\n            {% include 'product-grid-item-8' %}\n          {% endfor %}\n        </div>\n      </div>\n    {% endunless %}\n  {% endfor %}\n</div>\n\n<div class=\"cat-des\">\n  {% assign descriptions = collection.description | split: '<!-- split -->' %}\n  {% assign long_desc = descriptions[1] %}\n  {{ long_desc }}\n</div>\n\n{%- include 'section-style' -%}\n\n<script>\n\n\n    /* Related product active */\n  $('#section-{{ section.id }} .related-product-active').owlCarousel({\n      loop: true,\n    {% if settings.rtl_enable %} rtl:true, {% endif %}\n      nav: false,\n      autoplay: false,\n      autoplayTimeout: 5000,\n      item: {{ section.settings.product_cursole }},\n      margin: 30,\n      responsive: {\n          0: {\n              items: 1\n          },\n          576: {\n              items: 2\n          },\n          768: {\n              items: 2\n          },\n          992: {\n              items: 3\n          },\n          1200: {\n              items: {{ section.settings.product_cursole }}\n          }\n      }\n  })\n</script>",
  "name": "All Collection List",
  "settings": [
    {
      "type": "header",
      "content": "Container Style"
    },
    {
      "type": "radio",
      "id": "container_style",
      "label": "Container Style",
