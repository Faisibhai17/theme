<div class="page-width">
  <div class="team-profiles">
    <h2>{{ settings.team_section_header }}</h2>
    <p>{{ settings.team_section_subheading }}</p>
    <div class="team-members">
      {% for block in section.blocks %}
        <div class="team-member">
          <!-- Profile Image -->
          <div class="profile-image">
            <div class="img-box">
              <img
                src="{{ block.settings.profile_image | img_url: 'medium' }}"
                alt="{{ block.settings.team_member_name }}"
              >
            </div>
          </div>

          <!-- Name -->
          <div class="team-member-name">
            <h3>{{ block.settings.team_member_name }}</h3>
          </div>

          <!-- Role -->
          <div class="team-member-role">
            <p>{{ block.settings.team_member_role }}</p>
          </div>

          <!-- Bio -->
          <div class="team-member-bio">
            <p class="bio">{{ block.settings.team_member_bio }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<style>
   /* General Styles */
  body {
    font-family: Arial, sans-serif;
    color: #333;
    margin: 0;
    padding: 0;
  }

  /* Team Section */
  .team-profiles {
    padding: 60px 20px;
    text-align: center;
    background-color: #f9f9f9;
  }

  .team-profiles h2 {
    font-size: 36px;
    color: #08083C;
    margin-bottom: 20px;
  }

  .team-profiles p {
    font-size: 18px;
    color: #555;
    margin-bottom: 40px;
  }

  .team-members {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 30px;
    justify-items: center;
  }

  .team-member {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 100%;
    max-width: 350px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding: 10px 20px ;
  }

  .team-member:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  /* Profile Image - Round and Small */
  .profile-image {
    width: 100px; /* Set the width for the round profile image */
    height: 110px; /* Set the height to match the width */
    border-radius: 50%; /* Makes the image round */
    overflow: hidden; /* Ensures that the image doesn't overflow the rounded corners */
    display: flex;
    justify-content: center;
    align-items: center; /* Centers the image inside the div */
    margin: 0 auto; /* Centers the image container horizontally */
  }

  .profile-image img {
    width: 100%; /* Ensures the image fits inside the container */
    height: 100%; /* Ensures the image is responsive */
    object-fit: cover; /* Ensures the image covers the area of the container without distortion */
  }

  .team-member-name h3 {
    font-size: 24px;
    color: #08083C;
    margin: 20px 0 10px;
  }

  .team-member-role p {
    font-size: 16px;
    color: #777;
    margin-bottom: 20px;
  }

  .team-member-bio .bio {
    font-size: 14px;
    color: #555;
    padding: 0 10px;
    margin-bottom: 20px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .team-profiles {
      padding: 40px 15px;
    }

    .team-profiles h2 {
      font-size: 32px;
    }

    .team-members {
      grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    }
  }

  @media (max-width: 480px) {
    .team-profiles h2 {
      font-size: 28px;
    }

    .team-member img {
      height: 180px;
    }
  }
</style>
{% schema %}
{
  "name": "Team Member Profiles",
  "settings": [
    {
      "type": "text",
      "label": "Team Members",
      "id": "team_section_header",
      "default": "Meet Our Experts",
      "info": "Section header"
    },
    {
      "type": "richtext",
      "label": "Subheading",
      "id": "team_section_subheading",
      "info": "Subheading for the team section"
    }
  ],
  "blocks": [
    {
      "type": "team_members",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "label": "Profile Image",
          "id": "profile_image",
          "info": "Upload a team member's image"
        },
        {
          "type": "text",
          "label": "Name",
          "id": "team_member_name",
          "default": "John Doe",
          "info": "Name of the team member"
        },
        {
          "type": "text",
          "label": "Role",
          "id": "team_member_role",
          "default": "Software Engineer",
          "info": "Role of the team member"
        },
        {
          "type": "textarea",
          "label": "Bio",
          "id": "team_member_bio",
          "default": "John is a skilled software engineer with years of experience.",
          "info": "Bio for the team member"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Member Profiles"
    }
  ]
}
{% endschema %}
