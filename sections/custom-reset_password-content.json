{
  "content": "<div class=\"customer-page theme-default-margin\">\n  <div class=\"container\">\n    <div class=\"row\">\n      <div class=\"col-lg-6 offset-lg-3 col-md-8 offset-md-2\">\n        <div class=\"login\">\n          <div class=\"login-form-container\">\n            <div class=\"login-text\">\n              <h2>{{ 'customer.reset_password.title' | t }}</h2>\n              <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>\n            </div>\n            <div class=\"login-form\">\n              {% form 'reset_customer_password' %}\n                {{ form.errors | default_errors }}\n                <label for=\"ResetPassword\" class=\"hidden-label\">{{ 'customer.reset_password.password' | t }}</label>\n                <input\n                  type=\"password\"\n                  value=\"\"\n                  name=\"customer[password]\"\n                  id=\"ResetPassword\"\n                  class=\"input-full{% if form.errors contains 'password' %} error{% endif %}\"\n                  placeholder=\"{{ 'customer.reset_password.password' | t }}\"\n                >\n\n                <label for=\"PasswordConfirmation\" class=\"hidden-label\">\n                  {{- 'customer.reset_password.password_confirm' | t -}}\n                </label>\n                <input\n                  type=\"password\"\n                  value=\"\"\n                  name=\"customer[password_confirmation]\"\n                  id=\"PasswordConfirmation\"\n                  class=\"input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}\"\n                  placeholder=\"{{ 'customer.reset_password.password_confirm' | t }}\"\n                >\n\n                <div class=\"form-action-button\">\n                  <button type=\"submit\" class=\"theme-default-button\">{{ 'customer.reset_password.submit' | t }}</button>\n                </div>\n              {% endform %}\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</div>",
  "name": "Custom reset_password Content",
  "settings": []
}