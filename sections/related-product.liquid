<!-- PRODUCT SECTION START -->
{% assign related_product_limit_count = section.settings.related_product_limit_handle %}
{% assign related_product_limit = related_product_limit_count | plus: 1 %}

{% if collection == null or collection.handle == 'frontpage' or collection.handle == 'all' %}
  {% assign product_found = false %}

  {% for c in product.collections %}
    {% if product_found == false and c.handle != 'frontpage' and c.handle != 'all' and c.all_products_count > 1 %}
      {% assign product_found = true %}
      {% assign collection = c %}
    {% endif %}
  {% endfor %}
{% endif %}

{% if collection and collection.products_count > 1 and section.settings.related_products_enable %}
  <div class="related-product-area" id="section-{{ section.id }}">
    <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
      {% if section.settings.section_title != '' %}
        <div class="section-title {% if section.settings.section_text_align == 'section_text_left' %}text-left{% elsif section.settings.section_text_align == 'section_text_center' %}text-center{% elsif section.settings.section_text_align == 'section_text_right' %}text-right{% endif %} mb-50">
          <h2>{{ section.settings.section_title }}</h2>
        </div>
      {% endif %}
      <div class="related-product-active owl-carousel" id="related-product-active">
        {% assign current_product = product %}
        {% assign current_product_count = false %}
        {% for product in collection.products limit: related_product_limit %}
          {% if product.handle == current_product.handle %}
            {% assign current_product_count = false %}
          {% else %}
            {% unless current_product_count == true and forloop.last %}
              {% include 'product-grid-item-8' %}
            {% endunless %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{%- include 'section-style' -%}

<script>

       /* Related product active */
   $( document ).ready(function() {
     $('#section-{{ section.id }} .related-product-active').owlCarousel({
         loop: true,
       {% if settings.rtl_enable %} rtl:true, {% endif %}
         nav: true,
         autoplay: true,
         autoplayTimeout: 4000,
         item: {{ section.settings.product_cursole }},
         margin: 0,
         responsive: {
             0: {
                 items: 2
             },
             576: {
                 items: 2
             },
             768: {
                 items: 2,
                 margin: 20
             },
             992: {
                 items: 3,
                 margin: 20
             },
             1200: {
                 items: {{ section.settings.product_cursole }},
                 margin: 30
             }
         }
     })

  });
</script>

