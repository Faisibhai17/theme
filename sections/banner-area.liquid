{% if section.settings.banner_area_enable %}
  <div class="banner-area" id="section-{{ section.id }}">
    <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
      <div class="{% if section.settings.container_style == 'style_1' %}row {% else %}  custom-row-2 {% endif %}">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'banner' %}
              <div class="col-lg-{{ block.settings.banner_coloum }} col-md-12 col-12">
                <div class="{% if block.settings.text_style == 'text_style_1' %}single-banner {% else %} single-banner-2 {% endif %} mb-30">
                  <a href="{{ block.settings.banner_img_url }}">
                    <img
                      src="{% if block.settings.banner_img %}{{ block.settings.banner_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/370x230{% endif %}"
                      alt="{{ block.settings.banner_img.alt }}"
                    >
                  </a>
                  {% if block.settings.banner_title != ''
                    or block.settings.banner_subtitle != ''
                    or block.settings.button_icon != ''
                  %}
                    <div class="{% if block.settings.text_style == 'text_style_1' %}banner-content {% else %} banner-content-2 {% endif %}">
                      <h3>{{ block.settings.banner_title }}</h3>
                      <h4>{{ block.settings.banner_subtitle }}</h4>
                      <a href="{{ block.settings.arrow_url }}"
                        ><i class="fa fa-{{ block.settings.button_icon }}"></i
                      ></a>
                    </div>
                  {% endif %}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

