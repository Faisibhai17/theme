<div class="funfact-area" id="section-{{ section.id }}">
  <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
    <div class="row">
      <div class="col-lg-7 ml-auto">
        <div class="funfact-content">
          {% if section.settings.section_title != '' %}
            <h2>{{ section.settings.section_title }}</h2>
          {% endif %}
          {% if section.settings.coundown_enable %}
            <div class="timer">
              <div data-countdown="{{ section.settings.coundown_date }}"></div>
            </div>
          {% endif %}
          {% if section.settings.button_title != '' %}
            <div class="funfact-btn btn-hover">
              <a href="{{ section.settings.button_title_url }}">{{ section.settings.button_title }}</a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

