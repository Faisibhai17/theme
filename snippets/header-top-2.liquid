<div class="header-top-area header-padding-2">
  <div class="container-fluid">
    <div class="header-top-wap">
      <div class="language-currency-wrap">
        {%- include 'currency-picker' -%}
        {% if section.settings.custom_number != '' %}
          <div class="same-language-currency">
            <p>{{ section.settings.custom_number }}</p>
          </div>
        {% endif %}
      </div>
      <div class="header-right-wrap">
        {%- if section.settings.search_enable -%}
          {% include 'search-bar' %}
        {%- endif -%}
        {%- if section.settings.top_menu_enable -%}
          {% include 'header-top-menu' %}
        {%- endif -%}
        {%- if section.settings.header_wishlist_enable -%}
          {% include 'header-wishlist' %}
        {%- endif -%}
        {%- if section.settings.mini_cart_enable -%}
          {%- include 'mini-cart' -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
