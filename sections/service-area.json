{
  "content": "<div class=\"suppoer-area\" id=\"section-{{ section.id }}\">\n  <div class=\"{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}\">\n    <div class=\"row\">\n      {% for block in section.blocks %}\n        {%- case block.type -%}\n          {%- when 'service' -%}\n            <div class=\"col-lg-{{ block.settings.service_coloum }} col-md-6 col-12\">\n              <div class=\"support-wrap mb-30 support-1\">\n                {% if block.settings.service_icon %}\n                  <div class=\"support-icon\">\n                    <img\n                      class=\"animated\"\n                      src=\"{{ block.settings.service_icon | img_url: 'compact' }}\"\n                      alt=\"{{ block.settings.service_icon.alt }}\"\n                    >\n                  </div>\n                {% endif %}\n\n                {% if block.settings.service_title != '' or block.settings.service_description != '' %}\n                  <div class=\"support-content\">\n                    <h5>{{ block.settings.service_title }}</h5>\n                    <p>{{ block.settings.service_description }}</p>\n                  </div>\n                {% endif %}\n              </div>\n            </div>\n        {%- endcase -%}\n      {% endfor %}\n    </div>\n  </div>\n</div>\n\n{%- include 'section-style' -%}",
  "name": "Service",
  "settings": [
    {
      "type": "header",
      "content": "Container Style"
    },
    {
      "type": "radio",
      "id": "container_style",
      "label": "Container Style",
      "options": [
        {
          "value": "style_1",
          "label": "Container"
        },
        {
          "value": "style_2",
          "label": "Container Fulied"
        }
      ],
      "default": "style_1"
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "settings": [
        {
          "type": "text",
          "id": "service_coloum",
          "label": "Service Coloum",
          "default": "3",
          "info": "Follow Bootstrap Column"
        },
        {
          "type": "image_picker",
          "id": "service_icon",
          "label": "Image",
          "info": "Recommended Size: 50 x 50px"
        },
        {
          "type": "text",
          "id": "service_title",
          "label": "Service Title",
          "default": "Free Shipping"
        },
        {
          "type": "textarea",
          "id": "service_description",
          "label": "Service Description",
          "default": "Free shipping on all order"
        }
      ]
    },
    {
