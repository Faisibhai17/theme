{% assign itemStyle = '' -%}
{%- if cart.item_count == 0 %}{% assign itemStyle = ' style="display:none;"' %}{% endif %}
{% assign itemEmpty = '' -%}
{%- if cart.item_count == 0 %}{% assign itemEmpty = ' style="display:block;"' %}{% endif %}
{% assign itemCount = '' -%}
{%- if cart.item_count == 1 %}{% assign itemCount = ' style="display:block;"' %}{% endif %}
{% assign itemCount2 = '' -%}
{%- if cart.item_count > 1 %}{% assign itemCount2 = ' style="display:block;"' %}{% endif %}

{% comment %}
  {%- assign item_count = cart.item_count -%}
  <span class="bigcounter">{{ item_count }}</span>
  <span class="item-single-item-count" {{ itemCount }}>{{ section.settings.cart_item_title }}</span>
  <span class="item-multiple-item-count" {{ itemCount2 }}>{{ section.settings.cart_items_title }}</span>
  <span class="cart-empty-title" {{ itemEmpty }}>{{ section.settings.cart_items_title }}</span>
  |
  <span class="shopping-cart__total">{{ cart.total_price | money }}</span>


  <ul>
    <li class="cart-empty-title" {{ itemEmpty }}>
      <h3>{{ 'cart.general.empty' | t }}</h3>
    </li>
    <li class="single-product-cart single-cart-item-loop" {{ itemStyle  }}>
      {% for item in cart.items %}
      <div class="cart-single-item">
        <div class="cart-img">
          <a href="{{ item.url }}"><img src="{{ item | img_url: 'small' }}" alt=""></a>
        </div>
        <div class="cart-title">
          <h3><a href="{{ item.url }}">{{ item.title }}</a></h3>
          <span>{{ section.settings.quantity_itltle }}  {{ item.quantity }} x {{ item.price | money }}</span>
        </div>
        <div class="cart-delete">
          <a href="javascript:void(0);" onclick="Shopify.removeItem({{ item.variant.id }})">Remove</a>
        </div>
      </div>
      {% endfor %}
    </li>
    <li class="single-product-cart mini-cart-action" {{ itemStyle  }}>
      <div class="cart-total">
        <h4>{{ 'cart.label.total' | t }}: <span class="shopping-cart__total">{{ cart.total_price | money }}</span></h4>
      </div>
    </li>
    <li class="single-product-cart mini-cart-action" {{ itemStyle  }}>
      <div class="cart-checkout-btn">
        <a class="btn-hover cart-btn-style" href="/cart">{{ section.settings.view_cart_title }}</a>
        <a class="no-mrg btn-hover cart-btn-style" href="/checkout">{{ section.settings.checkout_title }}</a>
      </div>
    </li>
  </ul>
{% endcomment %}

<div class="same-style cart-wrap">
  <button class="icon-cart">
    <i class="pe-7s-shopbag"></i>
    {%- assign item_count = cart.item_count -%}
    <span class="count-style bigcounter">{{ item_count }}</span>
  </button>

  <div class="shopping-cart-content cart-empty-title" {{ itemEmpty }}>
    <h3>{{ 'cart.general.empty' | t }}</h3>
  </div>

  <div class="shopping-cart-content single-product-cart" {{ itemStyle }}>
    <ul class="single-cart-item-loop">
      {% for item in cart.items %}
        <li class="single-shopping-cart">
          <div class="shopping-cart-img">
            <a href="{{ item.url }}"><img alt="{{ cart_img.alt }}" src="{{ item | img_url: 'small' }}"></a>
          </div>
          <div class="shopping-cart-title">
            <h4>
              <a href="{{ item.url }}">{{ item.title }}</a>
            </h4>
            <h6>Qty: {{ item.quantity }}</h6>
            <span> {{ item.price | money }}</span>
          </div>
          <div class="shopping-cart-delete">
            <a href="javascript:void(0);" onclick="Shopify.removeItem({{ item.variant.id }})"
              ><i class="fa fa-times-circle"></i
            ></a>
          </div>
        </li>
      {% endfor %}
    </ul>

    <div class="shopping-cart-total">
      <h4>
        {{ 'cart.label.total' | t }} :
        <span class="shop-total shopping-cart__total">{{ cart.total_price | money }}</span>
      </h4>
    </div>

    <div class="shopping-cart-btn btn-hover text-center">
      <a class="default-btn" href="/cart">{{ section.settings.view_cart_title }}</a>
      <a class="default-btn" href="/checkout">{{ section.settings.checkout_title }}</a>
    </div>
  </div>
</div>
