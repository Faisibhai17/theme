{% if section.settings.mission_area_enable %}
  <div class="about-mission-area" id="section-{{ section.id }}">
    <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
      <div class="row">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'mission' %}
              <div class="col-lg-{{ block.settings.mission_coloum }} col-md-6 col-12">
                <div class="single-mission mb-30">
                  {% if block.settings.mission_title != '' %}
                    <h3>{{ block.settings.mission_title }}</h3>
                  {% endif %}
                  {% if block.settings.mission_description != '' %}
                    <p>{{ block.settings.mission_description }}</p>
                  {% endif %}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{%- include 'section-style' -%}

