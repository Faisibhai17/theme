<div class="Blog-area" id="section-{{ section.id }}">
  <div class="{% if section.settings.container_style == 'style_1' %}container {% else %} container-fluid{% endif %}">
    <div class="row {% if section.settings.sidebar_handle == 'left_sidebar_handle' %}flex-row-reverse{% endif %}">
      {%- unless section.settings.sidebar_handle == 'without_sidebar' -%}
        <div class="col-lg-12">
          {% include 'blog-sidebar' %}
        </div>
      {%- endunless -%}

      <div class="{% if section.settings.sidebar_handle == 'without_sidebar' %}col-lg-12{% else %}col-lg-12{% endif %} col-12">
        {%- assign blogs_limit = section.settings.blog_limit_handle -%}
        {%- paginate blog.articles by blogs_limit -%}
          <div class="">
            <div class="row">
              {% for article in blog.articles %}
                <div class="col-lg-{{ section.settings.blog_column }} col-md-{{ section.settings.blog_column_md }} col-{{ section.settings.blog_column_xs }}">
                  {% include 'blog-grid-item-2' %}
                </div>
              {% endfor %}
            </div>
            {%- if paginate.pages > 1 -%}
              <div class="pro-pagination-style text-center mt-20">
                {% include 'pagination' %}
              </div>
            {%- endif -%}
          </div>
        {%- endpaginate -%}
      </div>
    </div>
  </div>
</div>

{%- include 'section-style' -%}

